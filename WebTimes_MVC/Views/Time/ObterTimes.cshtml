@model IEnumerable<WebTimes_MVC.Models.Times>

<h4>Todos os Times</h4>
<p>
    @Html.ActionLink("Adicionar Novo Time", "IncluirTime")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cores)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    @Html.HiddenFor(model => item.TimeId)
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cores)
        </td>
        <td>
            @Html.ActionLink("Atualizar", "EditarTime", new { id = item.TimeId }) |
            @Html.ActionLink("Excluir", "ExcluirTime", new { id = item.TimeId },
                                                       new { onclick = "return confirm('Tem certeza que deseja excluir?');"})
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Voltar","ObterTimes")
</div>
